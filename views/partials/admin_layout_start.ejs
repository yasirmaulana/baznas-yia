<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Amalan</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        sage: {
                            50: '#f4f7f4',
                            100: '#e3ebe3',
                            200: '#c5d6c5',
                            300: '#a3bfa3',
                            400: '#7f9f7f',
                            500: '#8a9a5b',
                            600: '#6d7a48',
                            700: '#545f39',
                            800: '#3e462d',
                            900: '#2c3122',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <style type="text/tailwindcss">
        @layer components {
            .btn {
                @apply px-4 py-2 rounded-lg font-medium transition-colors duration-200;
            }
            .btn-primary {
                @apply bg-sage-500 text-white hover:bg-sage-600;
            }
            .btn-secondary {
                @apply bg-white text-sage-600 border border-sage-200 hover:bg-sage-50;
            }
            .input-field {
                @apply w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-sage-500 focus:border-sage-500 outline-none transition-all;
            }
            .card {
                @apply bg-white rounded-xl shadow-sm border border-sage-100;
            }
        }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-50 text-gray-800 font-sans antialiased h-screen flex overflow-hidden">

    <!-- Sidebar -->
    <aside class="w-64 bg-sage-900 text-white flex-shrink-0 flex flex-col transition-all duration-300">
        <div class="h-16 flex items-center px-6 border-b border-sage-800">
            <span class="text-xl font-bold flex items-center gap-2">
                <i data-lucide="shield" class="text-sage-400"></i> Admin
            </span>
        </div>

        <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
            <a href="/admin/dashboard"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path === '/admin/dashboard' ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="layout-dashboard" class="w-5 h-5"></i> Dashboard
            </a>
            <a href="/admin/users"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/users') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="users" class="w-5 h-5"></i> User Mgmt
            </a>
            <a href="/admin/banks"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/bank') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="credit-card" class="w-5 h-5"></i> Bank Accounts
            </a>
            <a href="/admin/campaigns"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/campaigns') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="megaphone" class="w-5 h-5"></i> Campaigns
            </a>
            <a href="/admin/donations"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/donations') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="heart" class="w-5 h-5"></i> Donations
            </a>
            <a href="/admin/whatsapp"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/whatsapp') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="message-square" class="w-5 h-5"></i> WhatsApp
            </a>
            <a href="/admin/notifications"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/notifications') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="bell" class="w-5 h-5"></i> Notifications
            </a>
            <a href="/admin/mutations"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/mutations') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="arrow-left-right" class="w-5 h-5"></i> Mutations
            </a>
            <a href="/admin/blogs"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/blogs') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="book-open" class="w-5 h-5"></i> Blogs
            </a>
            <a href="/admin/media"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/media') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="image" class="w-5 h-5"></i> Media
            </a>
            <a href="/admin/sliders"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-100 hover:bg-sage-800 hover:text-white transition-colors <%= path.startsWith('/admin/sliders') ? 'bg-sage-800 text-white' : '' %>">
                <i data-lucide="layout" class="w-5 h-5"></i> Sliders
            </a>
        </nav>

        <div class="p-4 border-t border-sage-800">
            <a href="/logout"
                class="flex items-center gap-3 px-4 py-3 rounded-lg text-sage-300 hover:bg-red-900/50 hover:text-red-200 transition-colors w-full">
                <i data-lucide="log-out" class="w-5 h-5"></i> Logout
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Topbar -->
        <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-8 shadow-sm">
            <h1 class="text-xl font-semibold text-gray-800 capitalize">
                <%= pageTitle || 'Dashboard' %>
            </h1>
            <div class="flex items-center gap-4">
                <span class="text-sm text-gray-500">Welcome, Admin</span>
                <div class="w-8 h-8 rounded-full bg-sage-100 flex items-center justify-center text-sage-700 font-bold">A
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50 p-8">