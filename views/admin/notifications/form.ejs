<%- include('../../partials/admin_layout_start', { pageTitle: 'Edit Template' , path: '/admin/notifications' }) %>

    <div class="max-w-3xl mx-auto">
        <div class="card p-8">
            <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                <i data-lucide="pencil" class="w-5 h-5 text-sage-600"></i> Edit Template
            </h2>

            <form action="/admin/notifications/<%= template.id %>" method="POST">
                <div class="space-y-6">
                    <!-- Info (Read Only) -->
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Template Code</label>
                            <input type="text" value="<%= template.code %>" disabled
                                class="input-field bg-gray-50 text-gray-500 cursor-not-allowed">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Template Name</label>
                            <input type="text" value="<%= template.name %>" disabled
                                class="input-field bg-gray-50 text-gray-500 cursor-not-allowed">
                        </div>
                    </div>

                    <!-- Message -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Message Template</label>
                        <p class="text-xs text-gray-500 mb-2">Available variables: <code
                                class="bg-gray-100 px-1 rounded">{{name}}</code>, <code
                                class="bg-gray-100 px-1 rounded">{{amount}}</code>, <code
                                class="bg-gray-100 px-1 rounded">{{campaign}}</code>, <code
                                class="bg-gray-100 px-1 rounded">{{bank}}</code>, <code
                                class="bg-gray-100 px-1 rounded">{{accountNumber}}</code></p>
                        <textarea name="messageTemplate" required rows="6"
                            class="input-field font-mono text-sm leading-relaxed"><%= template.messageTemplate %></textarea>
                    </div>

                    <!-- Active Toggle -->
                    <div class="flex items-center gap-2">
                        <input type="checkbox" name="isActive" id="isActive" <%=template.isActive ? 'checked' : '' %>
                        class="rounded text-sage-600 focus:ring-sage-500 w-5 h-5">
                        <label for="isActive" class="text-sm font-medium text-gray-700">Enable automated sending</label>
                    </div>

                    <div class="pt-6 border-t border-gray-100 flex justify-end gap-3">
                        <a href="/admin/notifications" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary px-8">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include('../../partials/admin_layout_end') %>