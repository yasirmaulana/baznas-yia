<%- include('../../partials/admin_layout_start', { pageTitle: 'Notification Templates' , path: '/admin/notifications' })
    %>

    <div class="mb-6 flex justify-between items-center">
        <div>
            <h2 class="text-lg font-semibold text-gray-800">Notification Templates</h2>
            <p class="text-sm text-gray-500">Manage automated WhatsApp messages.</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% templates.forEach(template=> { %>
            <div class="card p-6 flex flex-col h-full hover:shadow-md transition-shadow">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <span class="text-xs font-mono font-bold text-gray-400 uppercase tracking-wider">
                            <%= template.code %>
                        </span>
                        <h3 class="text-xl font-bold text-gray-800">
                            <%= template.name %>
                        </h3>
                    </div>
                    <span
                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= template.isActive ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= template.isActive ? 'Active' : 'Disabled' %>
                    </span>
                </div>

                <div
                    class="bg-sage-50 rounded-lg p-4 mb-6 flex-grow font-mono text-sm text-gray-600 border border-sage-100 relative">
                    <div class="absolute top-2 right-2 text-sage-300">
                        <i data-lucide="quote" class="w-6 h-6"></i>
                    </div>
                    <%= template.messageTemplate %>
                </div>

                <div class="pt-4 border-t border-gray-100 flex justify-end">
                    <a href="/admin/notifications/<%= template.id %>/edit"
                        class="btn btn-secondary flex items-center gap-2 text-sm">
                        <i data-lucide="pencil" class="w-4 h-4"></i> Edit Template
                    </a>
                </div>
            </div>
            <% }) %>
    </div>

    <%- include('../../partials/admin_layout_end') %>