<%- include('../../partials/admin_layout_start', { pageTitle: 'Bank Mutations' , path: '/admin/mutations' }) %>

    <div class="card p-6 mb-8">
        <form class="flex flex-col md:flex-row gap-4 items-end">
            <div class="w-full md:w-1/3">
                <label class="block text-sm font-medium text-gray-700 mb-1">Filter by Date</label>
                <input type="date" name="date" value="<%= query.date %>" class="input-field">
            </div>
            <div class="w-full md:w-1/3">
                <label class="block text-sm font-medium text-gray-700 mb-1">Filter by Bank</label>
                <select name="bankId" class="input-field">
                    <option value="">All Banks</option>
                    <% banks.forEach(bank=> { %>
                        <option value="<%= bank.id %>" <%=query.bankId==bank.id ? 'selected' : '' %>>
                            <%= bank.bank %> - <%= bank.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="w-full md:w-1/3 flex gap-2">
                <button type="submit" class="btn btn-primary flex-1 flex items-center justify-center gap-2">
                    <i data-lucide="filter" class="w-4 h-4"></i> Filter
                </button>
                <a href="/admin/mutations" class="btn btn-secondary flex items-center justify-center">Reset</a>
            </div>
        </form>
    </div>

    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-gray-600">
                <thead class="bg-gray-50 text-xs uppercase font-semibold text-gray-700">
                    <tr>
                        <th class="px-6 py-4">Transaction ID</th>
                        <th class="px-6 py-4">Date</th>
                        <th class="px-6 py-4 w-1/3">Description</th>
                        <th class="px-6 py-4">Type</th>
                        <th class="px-6 py-4 text-right">Amount</th>
                        <th class="px-6 py-4 text-right">Balance</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% mutations.forEach(mutation=> { %>
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 font-mono text-xs text-gray-500">
                                <%= mutation.transactionId || '-' %>
                                    <% if(mutation.bankAccount) { %>
                                        <div class="mt-1 text-xs text-sage-600 font-bold">
                                            <%= mutation.bankAccount.bank %>
                                        </div>
                                        <% } %>
                            </td>
                            <td class="px-6 py-4 text-xs">
                                <%= new Date(mutation.date).toLocaleDateString() %>
                                    <div class="text-gray-400">
                                        <%= new Date(mutation.date).toLocaleTimeString() %>
                                    </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="line-clamp-2 text-xs font-medium text-gray-700">
                                    <%= mutation.description %>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span
                                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold <%= mutation.type === 'CR' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                                    <%= mutation.type %>
                                </span>
                            </td>
                            <td
                                class="px-6 py-4 text-right font-mono font-medium <%= mutation.type === 'CR' ? 'text-green-600' : 'text-red-600' %>">
                                <%= new Intl.NumberFormat('id-ID').format(mutation.amount) %>
                            </td>
                            <td class="px-6 py-4 text-right font-mono text-gray-500">
                                <%= new Intl.NumberFormat('id-ID').format(mutation.balance) %>
                            </td>
                        </tr>
                        <% }) %>
                            <% if(mutations.length===0) { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">No mutations recorded
                                        yet.</td>
                                </tr>
                                <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../../partials/admin_layout_end') %>