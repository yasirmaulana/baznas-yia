<body class="bg-gray-100 antialiased">
    <div class="mobile-container">
        <!-- Header -->
        <header class="flex items-center px-4 py-4 border-b border-gray-50 bg-white sticky top-0 z-10">
            <a href="/" class="p-1 hover:bg-gray-100 rounded-full transition-colors">
                <i data-lucide="arrow-left" class="w-6 h-6 text-gray-900"></i>
            </a>
            <h1 class="ml-4 text-lg font-extrabold text-gray-900">Login</h1>
        </header>

        <main class="flex-grow p-6 flex flex-col">
            <!-- Title & Description -->
            <div class="mb-10 mt-4">
                <h2 class="text-xl font-extrabold text-gray-900 leading-tight mb-2">
                    Masuk akun Baznas YIA
                </h2>
                <p class="text-sm text-gray-500 leading-relaxed max-w-[90%]">
                    Yuk Masuk untuk nikmati kemudahan berdonasi dan akses fitur lainnya
                </p>
            </div>

            <% if (locals.error) { %>
                <div
                    class="bg-red-50 text-red-600 p-4 rounded-xl mb-6 text-xs font-bold border border-red-100 flex items-center gap-3">
                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                    <%= error %>
                </div>
                <% } %>

                    <!-- Login Form -->
                    <form action="/login" method="POST" class="space-y-4">
                        <input type="hidden" name="returnTo" value="<%= returnTo %>">

                        <div class="space-y-1.5">
                            <input type="text" name="email" required
                                class="w-full px-4 py-3.5 rounded-xl border border-gray-200 focus:ring-2 focus:ring-brand-blue/20 focus:border-brand-blue outline-none transition-all placeholder:text-gray-400 text-sm"
                                placeholder="Masukkan No Handphone atau Alamat Email">
                        </div>

                        <div class="space-y-1.5 relative">
                            <input type="password" id="password" name="password" required
                                class="w-full px-4 py-3.5 rounded-xl border border-gray-200 focus:ring-2 focus:ring-brand-blue/20 focus:border-brand-blue outline-none transition-all placeholder:text-gray-400 text-sm"
                                placeholder="Password">
                            <button type="button" onclick="togglePassword()"
                                class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors">
                                <i data-lucide="eye" id="eye-icon" class="w-5 h-5"></i>
                            </button>
                        </div>

                        <div class="flex justify-end pt-1">
                            <a href="/forgot-password" class="text-xs font-bold text-brand-blue hover:underline">
                                Lupa Password?
                            </a>
                        </div>

                        <button type="submit"
                            class="w-full bg-brand-blue hover:bg-blue-700 text-white font-extrabold py-4 rounded-xl shadow-lg shadow-blue-100 transition-all active:scale-[0.98] mt-4">
                            Masuk ke akun saya
                        </button>
                    </form>

                    <!-- Registration Link -->
                    <p class="text-center text-xs text-gray-500 mt-6 font-medium">
                        Belum punya akun? <a href="/register" class="text-brand-blue font-extrabold hover:underline">Yuk
                            daftar sekarang</a>
                    </p>

                    <!-- Divider -->
                    <div class="relative my-8">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-100"></div>
                        </div>
                        <!-- <div class="relative flex justify-center text-xs">
                            <span class="px-3 bg-white text-gray-400 font-medium">Atau lebih cepat</span>
                        </div> -->
