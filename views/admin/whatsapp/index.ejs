<%- include('../../partials/admin_layout_start', { pageTitle: 'WhatsApp Management' , path: '/admin/whatsapp' }) %>

    <div class="mb-6 flex justify-between items-center">
        <div>
            <h2 class="text-lg font-semibold text-gray-800">Sessions</h2>
            <p class="text-sm text-gray-500">Manage your WhatsApp connections.</p>
        </div>
        <div class="flex gap-2">
            <a href="/admin/whatsapp/broadcast" class="btn btn-secondary flex items-center gap-2">
                <i data-lucide="send"></i> Broadcast
            </a>
            <form action="/admin/whatsapp/sessions" method="POST" class="inline">
                <button type="submit" class="btn btn-primary flex items-center gap-2">
                    <i data-lucide="plus"></i> New Session
                </button>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% sessions.forEach(session=> { %>
            <div
                class="card p-6 flex flex-col justify-between h-full bg-white border border-sage-100 shadow-sm relative overflow-hidden">
                <% if(session.status==='connected' ) { %>
                    <div class="absolute top-0 right-0 p-2">
                        <span
                            class="inline-flex items-center px-2 py-1 rounded text-xs font-bold bg-green-100 text-green-700">
                            CONNECTED
                        </span>
                    </div>
                    <% } %>

                        <div>
                            <div class="flex items-center gap-3 mb-4">
                                <div
                                    class="w-12 h-12 rounded-full <%= session.status === 'connected' ? 'bg-green-100 text-green-600' : 'bg-gray-100 text-gray-500' %> flex items-center justify-center">
                                    <i data-lucide="smartphone" class="w-6 h-6"></i>
                                </div>
                                <div>
                                    <h3 class="font-bold text-gray-800">
                                        <%= session.sessionName %>
                                    </h3>
                                    <p class="text-xs text-gray-500">
                                        <%= session.status %>
                                            <% if(session.phoneNumber) { %>
                                                â€¢ <%= session.phoneNumber %>
                                                    <% } %>
                                    </p>
                                </div>
                            </div>

                            <div class="text-sm text-gray-600 mb-6">
                                Created: <%= new Date(session.createdAt).toLocaleDateString() %>
                            </div>
                        </div>

                        <div class="flex justify-between items-center pt-4 border-t border-gray-100">
                            <% if(session.status !=='connected' ) { %>
                                <a href="/admin/whatsapp/scan/<%= session.sessionName %>"
                                    class="text-sage-600 hover:text-sage-800 font-medium text-sm flex items-center gap-1">
                                    <i data-lucide="qr-code" class="w-4 h-4"></i> Scan QR
                                </a>
                                <% } else { %>
                                    <span class="text-green-600 font-medium text-sm flex items-center gap-1">
                                        <i data-lucide="wifi" class="w-4 h-4"></i> Active
                                    </span>
                                    <% } %>

                                        <form action="/admin/whatsapp/sessions/<%= session.id %>/delete" method="POST"
                                            onsubmit="return confirm('Disconnect and remove this session?')">
                                            <button type="submit"
                                                class="text-red-500 hover:text-red-700 p-2 rounded hover:bg-red-50 transition-colors">
                                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            </button>
                                        </form>
                        </div>
            </div>
            <% }) %>

                <% if(sessions.length===0) { %>
                    <div
                        class="col-span-full py-12 text-center text-gray-500 bg-gray-50 rounded-xl border border-dashed border-gray-300">
                        <i data-lucide="ghost" class="w-12 h-12 mx-auto mb-2 opacity-50"></i>
                        <p>No active WhatsApp sessions. Create one to get started.</p>
                    </div>
                    <% } %>
    </div>

    <%- include('../../partials/admin_layout_end') %>