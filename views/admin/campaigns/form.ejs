<%- include('../../partials/admin_layout_start', { pageTitle: campaign ? 'Edit Campaign' : 'Create Campaign' ,
    path: '/admin/campaigns' }) %>

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">

    <div class="max-w-4xl mx-auto">
        <form action="/admin/campaigns<%= campaign ? '/' + campaign.id + '?_method=PUT' : '' %>" method="POST"
            enctype="multipart/form-data" id="campaignForm">

            <div class="card p-6 md:p-8 space-y-6">

                <!-- Title -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Campaign Title</label>
                    <input type="text" name="title" required class="input-field text-lg font-medium"
                        placeholder="e.g. Help Build a Mosque in..." value="<%= campaign ? campaign.title : '' %>">
                </div>

                <!-- Image Upload / Media Selector -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Campaign Image (Square 1:1)</label>

                    <div class="flex flex-col md:flex-row items-start gap-6">
                        <!-- Preview Area -->
                        <div class="flex-shrink-0">
                            <div id="imagePreview"
                                class="w-40 h-40 bg-gray-100 rounded-lg border-2 border-dashed border-gray-300 flex items-center justify-center overflow-hidden relative group">
                                <% if (campaign && campaign.image) { %>
                                    <img src="<%= campaign.image %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <div class="text-gray-400 text-center p-4">
                                            <i data-lucide="image" class="w-8 h-8 mx-auto mb-2"></i>
                                            <span class="text-xs">No image</span>
                                        </div>
                                        <% } %>
                                            <!-- Clear Button (Only visible when image exists) -->
                                            <button type="button" id="clearImageBtn"
                                                class="absolute top-2 right-2 bg-red-500 text-white rounded-full p-1 shadow-md hover:bg-red-600 transition-colors opacity-0 group-hover:opacity-100 <%= (campaign && campaign.image) ? '' : 'hidden' %>">
                                                <i data-lucide="x" class="w-3 h-3"></i>
                                            </button>
                            </div>
                        </div>

                        <!-- Input Area -->
                        <div class="flex-1 space-y-4">
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                                <!-- Option 1: Direct Upload -->
                                <div class="relative">
                                    <input type="file" id="imageInput" name="image" accept="image/*" class="hidden">
                                    <button type="button" onclick="document.getElementById('imageInput').click()"
                                        class="w-full flex items-center justify-center gap-2 px-4 py-3 border-2 border-dashed border-gray-200 rounded-xl hover:border-sage-400 hover:bg-sage-50 transition-all group">
                                        <i data-lucide="upload-cloud"
                                            class="w-5 h-5 text-gray-400 group-hover:text-sage-500"></i>
                                        <span class="text-sm font-medium text-gray-600 group-hover:text-sage-700">Upload
                                            File</span>
                                    </button>
                                </div>

                                <!-- Option 2: Media Selector -->
                                <div class="relative">
                                    <input type="hidden" name="imageUrl" id="imageUrlInput"
                                        value="<%= campaign ? campaign.image : '' %>">
                                    <button type="button" onclick="openMediaSelector()"
                                        class="w-full flex items-center justify-center gap-2 px-4 py-3 border-2 border-gray-200 rounded-xl hover:border-sage-400 hover:bg-sage-50 transition-all group">
                                        <i data-lucide="library"
                                            class="w-5 h-5 text-gray-400 group-hover:text-sage-500"></i>
                                        <span class="text-sm font-medium text-gray-600 group-hover:text-sage-700">Browse
                                            Media</span>
                                    </button>
                                </div>
                            </div>

                            <p class="text-xs text-gray-500 italic">* Square image recommended. External/Library images
                                will skip cropping.</p>

                            <!-- Cropper Container -->
                            <div id="cropContainer"
                                class="hidden bg-gray-900 rounded-lg overflow-hidden max-w-md relative">
                                <img id="cropperImage" class="max-w-full">
                                <div class="absolute bottom-4 right-4 z-10 flex gap-2">
                                    <button type="button" id="cropCancelBtn"
                                        class="bg-gray-600 text-white px-3 py-1 rounded text-sm hover:bg-gray-700">Cancel</button>
                                    <button type="button" id="cropConfirmBtn"
                                        class="bg-sage-600 text-white px-3 py-1 rounded text-sm hover:bg-sage-700">Crop
                                        & Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Detail WYSIWYG -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Campaign Details</label>
                    <div id="editor-container" class="h-64 bg-white rounded-lg"><%- campaign ? campaign.detail : '' %>
                    </div>
                    <input type="hidden" name="detail" id="detailInput">
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Target Amount -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Target Amount (Rupiah)</label>
                        <div class="relative">
                            <span class="absolute left-3 top-2.5 text-gray-500 font-medium">Rp</span>
                            <input type="number" name="targetAmount" required class="input-field pl-10" placeholder="0"
                                value="<%= campaign ? campaign.targetAmount : '' %>">
                        </div>
                    </div>

                    <!-- Bank Account -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Destination Bank Account</label>
                        <div class="relative">
                            <select name="bankAccountId" class="input-field appearance-none">
                                <option value="">Select a Bank Account</option>
                                <% banks.forEach(bank=> { %>
                                    <option value="<%= bank.id %>" <%=campaign && campaign.bankAccountId==bank.id
                                        ? 'selected' : '' %>>
                                        <%= bank.bank %> - <%= bank.accountNumber %> (<%= bank.name %>)
                                    </option>
                                    <% }) %>
                            </select>
                            <i data-lucide="chevron-down"
                                class="w-5 h-5 text-gray-400 absolute right-3 top-3 pointer-events-none"></i>
                        </div>
                    </div>

                    <!-- Dates -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                        <input type="date" name="startDate" required class="input-field"
                            value="<%= campaign ? campaign.startDate : '' %>">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                        <input type="date" name="endDate" required class="input-field"
                            value="<%= campaign ? campaign.endDate : '' %>">
                    </div>
                </div>

                <!-- Active Status -->
                <div class="flex items-center gap-2 pt-2">
                    <input type="checkbox" name="isActive" id="isActive" <%=(!campaign || campaign.isActive) ? 'checked'
                        : '' %> class="rounded text-sage-600 focus:ring-sage-500 w-5 h-5">
                    <label for="isActive" class="text-sm font-medium text-gray-700">Active Campaign</label>
                </div>

                <!-- Form Actions -->
                <div class="flex justify-end gap-3 pt-4 border-t border-gray-100">
                    <a href="/admin/campaigns" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary px-8">Save Campaign</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Media Selector Modal -->
    <div id="mediaSelectorModal" class="hidden fixed inset-0 bg-black/50 z-[60] flex items-center justify-center p-4">
        <div class="bg-white rounded-xl max-w-4xl w-full p-6 max-h-[80vh] overflow-y-auto">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-lg font-bold text-gray-900">Select Image from Media Library</h3>
                <button type="button" onclick="closeMediaSelector()" class="text-gray-400 hover:text-gray-600">
                    <i data-lucide="x" class="w-5 h-5"></i>
                </button>
            </div>

            <div id="mediaGrid" class="grid grid-cols-3 md:grid-cols-4 gap-4">
                <p class="col-span-full text-center text-gray-500 text-sm">Loading images...</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        // --- WYSIWYG Setup ---
        var quill = new Quill('#editor-container', {
            theme: 'snow',
            placeholder: 'Write the full story of the campaign here...',
            modules: {
                toolbar: [
                    ['bold', 'italic', 'underline', 'strike'],
                    [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                    [{ 'header': [1, 2, 3, false] }],
                    ['link', 'clean']
                ]
            }
        });

        document.getElementById('campaignForm').onsubmit = function () {
            // Populate hidden input with WYSIWYG content
            document.getElementById('detailInput').value = quill.root.innerHTML;
            return true;
        };


        // --- Image Selection & Cropper Logic ---
        const imageInput = document.getElementById('imageInput');
        const imageUrlInput = document.getElementById('imageUrlInput');
        const cropContainer = document.getElementById('cropContainer');
        const cropperImage = document.getElementById('cropperImage');
        const imagePreview = document.getElementById('imagePreview');
        const cropConfirmBtn = document.getElementById('cropConfirmBtn');
        const cropCancelBtn = document.getElementById('cropCancelBtn');
        const clearImageBtn = document.getElementById('clearImageBtn');

        let cropper;
        let originalFile;

        // 1. Direct Upload + Cropper
        imageInput.addEventListener('change', function (e) {
            const files = e.target.files;
            if (files && files.length > 0) {
                const file = files[0];
                originalFile = file;

                if (file.type.match('image.*')) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        cropperImage.src = e.target.result;
                        cropContainer.classList.remove('hidden');

                        if (cropper) {
                            cropper.destroy();
                        }

                        cropper = new Cropper(cropperImage, {
                            aspectRatio: 1, // Force square
                            viewMode: 1,
                            background: false,
                            autoCropArea: 1,
                        });
                    };
                    reader.readAsDataURL(file);
                }
            }
        });

        cropConfirmBtn.addEventListener('click', function () {
            if (!cropper) return;

            const canvas = cropper.getCroppedCanvas({
                width: 800,
                height: 800,
                imageSmoothingEnabled: true,
                imageSmoothingQuality: 'high',
            });

            canvas.toBlob(function (blob) {
                const newFile = new File([blob], originalFile.name, {
                    type: 'image/jpeg',
                    lastModified: Date.now()
                });

                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(newFile);
                imageInput.files = dataTransfer.files;

                // Clear URL input
                imageUrlInput.value = '';

                // Update preview
                imagePreview.innerHTML = `<img src="${canvas.toDataURL()}" class="w-full h-full object-cover">`;
                clearImageBtn.classList.remove('hidden');

                // Hide cropper
                cropContainer.classList.add('hidden');
                cropper.destroy();
                cropper = null;

                // Re-init icons
                lucide.createIcons();
            }, 'image/jpeg', 0.9);
        });

        cropCancelBtn.addEventListener('click', function () {
            cropContainer.classList.add('hidden');
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }
            imageInput.value = '';
        });

        // 2. Media Selector Logic
        async function openMediaSelector() {
            document.getElementById('mediaSelectorModal').classList.remove('hidden');
            await loadMediaImages();
            lucide.createIcons();
        }

        function closeMediaSelector() {
            document.getElementById('mediaSelectorModal').classList.add('hidden');
        }

        async function loadMediaImages() {
            try {
                const response = await fetch('/admin/media/api/list');
                const data = await response.json();
                const mediaImages = data.images || [];

                const mediaGrid = document.getElementById('mediaGrid');

                if (mediaImages.length === 0) {
                    mediaGrid.innerHTML = `
                        <div class="col-span-full text-center py-8">
                            <p class="text-gray-500 text-sm mb-2">No images found in Media Library</p>
                            <a href="/admin/media" class="text-sage-500 text-sm underline">Upload images first</a>
                        </div>
                    `;
                } else {
                    mediaGrid.innerHTML = mediaImages.map(img => `
                        <div class="group relative bg-gray-50 rounded-lg border border-gray-100 overflow-hidden hover:shadow-md transition-shadow cursor-pointer"
                            onclick="selectImage('${img.url}')">
                            <div class="aspect-square relative bg-white">
                                <img src="${img.url}" alt="${img.name}" class="w-full h-full object-contain p-2">
                            </div>
                            <div class="p-2 bg-white border-t border-gray-100">
                                <p class="text-[10px] font-medium text-gray-700 truncate" title="${img.name}">${img.name}</p>
                            </div>
                        </div>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading media:', error);
                document.getElementById('mediaGrid').innerHTML = `
                    <p class="col-span-full text-center text-red-500 text-sm">Error loading images</p>
                `;
            }
        }

        function selectImage(url) {
            // Fix: Don't prepand origin if it's already a full URL (Cloudinary)
            const finalUrl = url.startsWith('http') ? url : window.location.origin + url;

            imageUrlInput.value = finalUrl;
            imageInput.value = ''; // Clear file input

            // Update preview
            imagePreview.innerHTML = `<img src="${finalUrl}" class="w-full h-full object-cover">`;
            clearImageBtn.classList.remove('hidden');

            closeMediaSelector();
            lucide.createIcons();
        }

        // 3. Clear Preview Helper
        function clearImagePreview() {
            imageInput.value = '';
            imageUrlInput.value = '';
            imagePreview.innerHTML = `
                <div class="text-gray-400 text-center p-4">
                    <i data-lucide="image" class="w-8 h-8 mx-auto mb-2"></i>
                    <span class="text-xs">No image</span>
                </div>
            `;
            clearImageBtn.classList.add('hidden');
            lucide.createIcons();
        }

        // Bind clear button
        if (clearImageBtn) {
            clearImageBtn.addEventListener('click', clearImagePreview);
        }

    </script>

    <%- include('../../partials/admin_layout_end') %>