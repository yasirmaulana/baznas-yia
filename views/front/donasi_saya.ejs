<%- include('../partials/front_header') %>

    <style>
        nav.sticky {
            display: none !important;
        }
    </style>

    <div class="bg-white min-h-screen flex flex-col pb-20">
        <!-- Header -->
        <header class="sticky top-0 z-50 bg-white border-b border-gray-50 px-4 py-3 flex items-center gap-4">
            <a href="/profile" class="p-2 hover:bg-gray-50 rounded-full transition-colors">
                <i data-lucide="arrow-left" class="w-5 h-5 text-gray-700"></i>
            </a>
            <h1 class="text-sm font-bold text-gray-900">Donasi Saya</h1>
        </header>

        <main class="flex-grow p-4 space-y-4">
            <% if (donations.length===0) { %>
                <div class="flex flex-col items-center justify-center py-20 text-center space-y-4">
                    <div class="w-20 h-20 bg-gray-50 rounded-full flex items-center justify-center">
                        <i data-lucide="heart" class="w-10 h-10 text-gray-300"></i>
                    </div>
                    <div>
                        <h3 class="text-sm font-bold text-gray-900">Belum Ada Donasi</h3>
                        <p class="text-[11px] text-gray-400 mt-1 max-w-[200px] mx-auto">Mari mulai langkah kebaikan Anda
                            hari ini.</p>
                    </div>
                    <a href="/campaigns"
                        class="bg-tarahum-500 text-white text-[11px] font-bold px-6 py-2.5 rounded-xl">Cari Kebaikan</a>
                </div>
                <% } else { %>
                    <div class="space-y-3">
                        <% donations.forEach(donation=> { %>
                            <div class="bg-white border border-gray-50 rounded-2xl p-4 shadow-sm">
                                <div class="flex gap-4">
                                    <!-- Campaign Image -->
                                    <div
                                        class="w-16 h-16 rounded-xl overflow-hidden flex-shrink-0 bg-gray-100 border border-gray-50">
                                        <% if (donation.campaign && donation.campaign.image) { %>
                                            <img src="<%= donation.campaign.image %>"
                                                class="w-full h-full object-cover">
                                            <% } else { %>
                                                <div
                                                    class="w-full h-full flex items-center justify-center text-gray-300">
                                                    <i data-lucide="image" class="w-6 h-6"></i>
                                                </div>
                                                <% } %>
                                    </div>

                                    <!-- Content -->
                                    <div class="flex-grow min-w-0 flex flex-col justify-between py-0.5">
                                        <div>
                                            <h3 class="text-[11px] font-bold text-gray-900 line-clamp-2 leading-snug">
                                                <%= donation.campaign ? donation.campaign.title : 'Campaign Terhapus' %>
                                            </h3>
                                            <p class="text-[9px] text-gray-400 mt-1">
                                                <%= donation.date %>
                                            </p>
                                        </div>
                                        <div
                                            class="flex items-center justify-between mt-2 pt-2 border-t border-gray-50">
                                            <span class="text-xs font-extrabold text-tarahum-500">
                                                <%= donation.formattedTotal %>
                                            </span>

                                            <% if (donation.status===1) { %>
                                                <span
                                                    class="text-[10px] font-bold text-yellow-500 bg-yellow-50 px-2.5 py-1 rounded-lg">Menunggu</span>
                                                <% } else if (donation.status===2) { %>
                                                    <span
                                                        class="text-[10px] font-bold text-green-500 bg-green-50 px-2.5 py-1 rounded-lg">Berhasil</span>
                                                    <% } else { %>
                                                        <span
                                                            class="text-[10px] font-bold text-red-400 bg-red-50 px-2.5 py-1 rounded-lg">Dibatalkan</span>
                                                        <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>
        </main>
    </div>

    <%- include('../partials/front_footer') %>