<%- include('../partials/front_header') %>

    <style>
        /* Hide the default global nav on blog page */
        nav.bg-tarahum-500 {
            display: none !important;
        }
    </style>

    <div class="bg-gray-50 min-h-screen pb-20">
        <!-- Sticky Header -->
        <header class="sticky top-0 z-50 bg-white border-b border-gray-100 px-4 py-3 flex items-center justify-between">
            <div class="flex items-center gap-4">
                <a href="/" class="p-2 hover:bg-gray-50 rounded-full transition-colors">
                    <i data-lucide="arrow-left" class="w-5 h-5 text-gray-700"></i>
                </a>
                <h1 class="text-sm font-bold text-gray-900">Ilmu Portal</h1>
            </div>
            <button class="p-2 hover:bg-gray-50 rounded-full transition-colors">
                <i data-lucide="search" class="w-5 h-5 text-gray-400"></i>
            </button>
        </header>

        <main class="max-w-[480px] mx-auto">
            <!-- Featured Article (Latest) -->
            <% if (posts.length> 0) { %>
                <div class="p-4">
                    <h2 class="text-xs font-bold text-gray-900 uppercase tracking-wider mb-4 px-1">Terbaru</h2>
                    <article
                        class="bg-white rounded-[2rem] overflow-hidden border border-gray-100 shadow-xl shadow-gray-200/50 group">
                        <a href="/blog/<%= posts[0].slug %>" class="block">
                            <div class="aspect-[16/9] relative overflow-hidden bg-gray-100">
                                <% if(posts[0].image) { %>
                                    <img src="<%= posts[0].image %>" alt="<%= posts[0].title %>"
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700">
                                    <% } else { %>
                                        <div class="w-full h-full flex items-center justify-center text-gray-300">
                                            <i data-lucide="image" class="w-12 h-12"></i>
                                        </div>
                                        <% } %>
                                            <div class="absolute top-4 left-4">
                                                <span
                                                    class="bg-tarahum-500 text-white text-[9px] font-bold px-3 py-1.5 rounded-full shadow-lg">
                                                    Edukasi
                                                </span>
                                            </div>
                            </div>
                            <div class="p-6">
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="text-[10px] text-gray-400 flex items-center gap-1">
                                        <i data-lucide="calendar" class="w-3 h-3"></i>
                                        <%= posts[0].formattedDate %>
                                    </span>
                                    <span class="text-[10px] text-gray-300">â€¢</span>
                                    <span class="text-[10px] text-gray-400 flex items-center gap-1">
                                        <i data-lucide="clock" class="w-3 h-3"></i>
                                        <%= posts[0].readTime %> Menit Baca
                                    </span>
                                </div>
                                <h3
                                    class="text-lg font-extrabold text-gray-900 leading-tight group-hover:text-tarahum-500 transition-colors">
                                    <%= posts[0].title %>
                                </h3>
                                <p class="text-xs text-gray-500 mt-3 line-clamp-2 leading-relaxed">
                                    <%= posts[0].snippet %>
                                </p>
                            </div>
                        </a>
                    </article>
                </div>
                <% } %>

                    <!-- Article List -->
                    <div class="px-4 pb-10">
                        <div class="flex items-center justify-between mb-4 px-1 mt-4">
                            <h2 class="text-xs font-bold text-gray-900 uppercase tracking-wider">Artikel Lainnya</h2>
                            <div class="flex gap-2">
                                <button
                                    class="p-1 px-3 bg-white border border-gray-100 rounded-full text-[10px] font-bold text-gray-500 shadow-sm">Populer</button>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <% posts.slice(1).forEach(post=> { %>
                                <article
                                    class="bg-white rounded-3xl p-3 border border-gray-50 shadow-sm hover:shadow-md transition-all group">
                                    <a href="/blog/<%= post.slug %>" class="flex gap-4">
                                        <div
                                            class="w-24 h-24 rounded-2xl overflow-hidden flex-shrink-0 bg-gray-50 border border-gray-100">
                                            <% if(post.image) { %>
                                                <img src="<%= post.image %>" alt="<%= post.title %>"
                                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                                                <% } else { %>
                                                    <div
                                                        class="w-full h-full flex items-center justify-center text-gray-300">
                                                        <i data-lucide="image" class="w-6 h-6"></i>
                                                    </div>
                                                    <% } %>
                                        </div>
                                        <div class="flex-grow flex flex-col justify-center py-1">
                                            <div class="flex items-center gap-2 mb-1.5">
                                                <span
                                                    class="text-[8px] font-bold text-tarahum-500 bg-tarahum-50 px-2 py-0.5 rounded-md uppercase">Artikel</span>
                                                <span class="text-[9px] text-gray-400">
                                                    <%= post.readTime %> min read
                                                </span>
                                            </div>
                                            <h4
                                                class="text-[11px] font-bold text-gray-900 line-clamp-2 leading-snug group-hover:text-tarahum-500 transition-colors">
                                                <%= post.title %>
                                            </h4>
                                            <p class="text-[9px] text-gray-400 mt-2 flex items-center gap-1">
                                                <i data-lucide="calendar" class="w-2.5 h-2.5"></i>
                                                <%= post.formattedDate %>
                                            </p>
                                        </div>
                                    </a>
                                </article>
                                <% }) %>

                                    <% if (posts.length===0) { %>
                                        <div class="flex flex-col items-center justify-center py-20 text-center">
                                            <div
                                                class="w-16 h-16 bg-white rounded-full flex items-center justify-center shadow-sm mb-4">
                                                <i data-lucide="book-open" class="w-8 h-8 text-gray-200"></i>
                                            </div>
                                            <h3 class="text-sm font-bold text-gray-900">Belum Ada Artikel</h3>
                                            <p class="text-[11px] text-gray-400 mt-1">Nantikan informasi menarik lainnya
                                                segera!</p>
                                        </div>
                                        <% } %>
                        </div>
                    </div>
        </main>
    </div>

    <%- include('../partials/front_footer') %>