<%- include('../partials/front_header') %>

    <!-- Custom Header for Campaigns Page -->
    <style>
        /* Override sticky header if needed */
        nav.sticky {
            display: none !important;
        }
    </style>

    <header class="sticky top-0 z-50 bg-white border-b border-gray-50 px-4 py-3 flex items-center gap-4">
        <a href="javascript:history.back()" class="p-2 hover:bg-gray-50 rounded-full transition-colors">
            <i data-lucide="arrow-left" class="w-5 h-5 text-gray-700"></i>
        </a>
        <h1 class="text-sm font-bold text-gray-900 line-clamp-1">Amal</h1>
    </header>

    <!-- Filters / Categories -->
    <section class="bg-white border-b border-gray-100">
        <div class="flex divide-x divide-gray-100">
            <button
                class="flex-1 py-4 flex items-center justify-center gap-2 text-xs font-medium text-gray-600 active:bg-gray-50">
                <i data-lucide="sliders-horizontal" class="w-4 h-4 text-tarahum-500"></i>
                Kategori
                <span class="w-1.5 h-1.5 rounded-full bg-tarahum-500"></span>
            </button>
            <button
                class="flex-1 py-4 flex items-center justify-center gap-2 text-xs font-medium text-gray-600 active:bg-gray-50">
                <i data-lucide="arrow-down-up" class="w-4 h-4 text-tarahum-500"></i>
                Urutkan
            </button>
            <button
                class="flex-1 py-4 flex items-center justify-center gap-2 text-xs font-medium text-gray-600 active:bg-gray-50">
                <i data-lucide="filter" class="w-4 h-4 text-tarahum-500"></i>
                Filter
            </button>
        </div>
    </section>

    <!-- Campaigns List -->
    <section class="bg-white">
        <div class="divide-y divide-gray-50">
            <% campaigns.forEach((campaign, index)=> { %>
                <div class="p-4 <%= index === 0 ? 'bg-[#f0f9fb]' : '' %>">
                    <% if (index===0) { %>
                        <div class="mb-3">
                            <span
                                class="bg-orange-400 text-white text-[10px] font-bold px-2 py-1 rounded uppercase">Rekomendasi</span>
                        </div>
                        <% } %>

                            <a href="/campaign/<%= campaign.id %>-<%= campaign.slug %>" class="flex gap-4">
                                <!-- Image -->
                                <div class="w-2/5 aspect-[4/3] rounded-lg overflow-hidden flex-shrink-0">
                                    <img src="<%= campaign.image || 'https://via.placeholder.com/400x300?text=No+Image' %>"
                                        alt="<%= campaign.title %>" class="w-full h-full object-cover">
                                </div>

                                <!-- Content -->
                                <div class="flex-1 flex flex-col justify-between">
                                    <div>
                                        <h3 class="text-[13px] font-bold text-gray-900 leading-snug line-clamp-2 mb-1">
                                            <%= campaign.title %>
                                        </h3>
                                        <div class="flex items-center gap-1 mb-2">
                                            <span class="text-[10px] font-medium text-gray-500">BAZNAS Hub</span>
                                            <i data-lucide="check-circle-2"
                                                class="w-3 h-3 text-blue-500 fill-blue-500/10"></i>
                                            <span
                                                class="bg-blue-100 text-blue-600 text-[8px] font-bold px-1 rounded">ORG</span>
                                        </div>
                                    </div>

                                    <div class="space-y-1">
                                        <!-- Progress Bar -->
                                        <div class="w-full bg-gray-200 h-1 rounded-full overflow-hidden">
                                            <div class="bg-tarahum-500 h-full"
                                                style="width: <%= campaign.percentage %>%"></div>
                                        </div>

                                        <div class="flex justify-between items-end mt-2">
                                            <div class="flex flex-col">
                                                <span class="text-[9px] text-gray-400 font-medium">Terkumpul</span>
                                                <span class="text-xs font-bold text-gray-900">
                                                    <%= campaign.formattedCurrent %>
                                                </span>
                                            </div>
                                            <div class="flex flex-col items-end">
                                                <span class="text-[9px] text-gray-400 font-medium">Sisa hari</span>
                                                <span class="text-xs font-bold text-gray-900">30</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                </div>
                <% }) %>
        </div>
    </section>

    <%- include('../partials/front_footer') %>