<%- include('../partials/front_header') %>

    <style>
        nav.sticky {
            display: none !important;
        }
    </style>

    <div class="bg-white min-h-screen flex flex-col">
        <!-- Header -->
        <header class="sticky top-0 z-50 bg-white border-b border-gray-50 px-4 py-3 flex items-center gap-4">
            <a href="/profile" class="p-2 hover:bg-gray-50 rounded-full transition-colors">
                <i data-lucide="arrow-left" class="w-5 h-5 text-gray-700"></i>
            </a>
            <h1 class="text-sm font-bold text-gray-900">Edit Profil</h1>
        </header>

        <main class="flex-grow p-4">
            <% if (locals.error) { %>
                <div
                    class="bg-red-50 text-red-500 text-xs p-3 rounded-xl mb-4 border border-red-100 flex items-center gap-2">
                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                    <%= error %>
                </div>
                <% } %>

                    <form action="/profile/edit" method="POST" class="space-y-6">
                        <!-- Name -->
                        <div>
                            <label
                                class="block text-[10px] font-bold text-gray-400 uppercase tracking-wider mb-2 px-1">Nama
                                Lengkap</label>
                            <input type="text" name="name" value="<%= user.name %>" required
                                class="w-full px-4 py-3 bg-gray-50 border border-gray-100 rounded-xl text-xs focus:ring-2 focus:ring-tarahum-500 outline-none transition-all">
                        </div>

                        <!-- Email (Read Only) -->
                        <div>
                            <label
                                class="block text-[10px] font-bold text-gray-400 uppercase tracking-wider mb-2 px-1">Email</label>
                            <input type="email" value="<%= user.email %>" readonly
                                class="w-full px-4 py-3 bg-gray-100 border border-gray-100 rounded-xl text-xs text-gray-400 cursor-not-allowed outline-none">
                            <p class="text-[9px] text-gray-400 mt-1 px-1">Email tidak dapat diubah</p>
                        </div>

                        <!-- Phone -->
                        <div>
                            <label
                                class="block text-[10px] font-bold text-gray-400 uppercase tracking-wider mb-2 px-1">Nomor
                                Telepon</label>
                            <input type="tel" name="phone" value="<%= user.phone %>"
                                class="w-full px-4 py-3 bg-gray-50 border border-gray-100 rounded-xl text-xs focus:ring-2 focus:ring-tarahum-500 outline-none transition-all">
                        </div>

                        <hr class="border-gray-50">

                        <!-- Password Section -->
                        <div class="space-y-4 pt-2">
                            <h3 class="text-[10px] font-bold text-gray-900 uppercase tracking-wider px-1">Update
                                Password (Opsional)</h3>

                            <div>
                                <label class="block text-[10px] font-bold text-gray-400 mb-2 px-1">Password Baru</label>
                                <input type="password" name="password" placeholder="••••••••"
                                    class="w-full px-4 py-3 bg-gray-50 border border-gray-100 rounded-xl text-xs focus:ring-2 focus:ring-tarahum-500 outline-none transition-all">
                            </div>

                            <div>
                                <label class="block text-[10px] font-bold text-gray-400 mb-2 px-1">Konfirmasi
                                    Password</label>
                                <input type="password" name="confirmPassword" placeholder="••••••••"
                                    class="w-full px-4 py-3 bg-gray-50 border border-gray-100 rounded-xl text-xs focus:ring-2 focus:ring-tarahum-500 outline-none transition-all">
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="pt-6">
                            <button type="submit"
                                class="w-full bg-tarahum-500 hover:bg-tarahum-600 text-white font-bold py-4 rounded-2xl text-xs shadow-lg shadow-tarahum-100 active:scale-[0.98] transition-all">
                                Simpan Perubahan
                            </button>
                        </div>
                    </form>
        </main>
    </div>

    <%- include('../partials/front_footer') %>